@model IEnumerable<Proizvodi.Proizvod>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Proizvodi</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cijena_u_kn)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cijena_u_kn)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProizvodId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProizvodId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProizvodId })
            </td>
        </tr>
    }

</table>

<button>
    @Html.ActionLink("Dodaj", "Create")
</button>
